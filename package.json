{
  "name": "pehtheme-simple",
  "version": "1.0.0",
  "description": "An open-source Hugo theme lovingly crafted using Tailwind CSS.",
  "main": "index.js",
  "scripts": {
    "dev:generate": "npx tailwindcss -i ./assets/input.css -o ./themes/pehtheme-simple-hugo/assets/css/main.css -w",
    "dev:hugo": "hugo server --buildDrafts",
    "dev": "run-p dev:*",
    "build:generate": "npx tailwindcss -i ./assets/input.css -o ./themes/pehtheme-simple-hugo/static/assets/css/main.css --minify",
    "build:hugo": "hugo",
    "build": "run-p build:*"
  },
  "keywords": [
    "hugo",
    "tailwindcss"
  ],
  "author": "Fauzan My",
  "license": "MIT",
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.10",
    "autoprefixer": "^10.4.20",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.1",
    "postcss-cli": "^10.1.0",
    "tailwindcss": "^3.4.17"
  }
}
